<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matthewfishman.calculator.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/result"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/newNumber"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operator"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/newNumber"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/newNumber"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/newNumber" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:minWidth="48dip"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:minWidth="48dip"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginTop="8dp" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        android:minWidth="48dip" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:minWidth="48dip"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintLeft_toLeftOf="@+id/button7" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginLeft="8dp"
        android:minWidth="48dip" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:minWidth="48dip"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:minWidth="48dip"
        app:layout_constraintTop_toBottomOf="@+id/newNumber"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/newNumber" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiply"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:minWidth="48dip" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bequals"
        app:layout_constraintBaseline_toBaselineOf="@+id/decimal"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/decimal"
        android:layout_marginLeft="8dp"
        android:minWidth="48dip" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divide"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtract"
        android:minWidth="48dip"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/bequals"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bequals" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:minWidth="48dip"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decimal"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        android:minWidth="48dip" />

    <Button
        android:text="Neg"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:id="@+id/negate"
        app:layout_constraintRight_toRightOf="@+id/subtract"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/subtract"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/decimal"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="Clear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        app:layout_constraintLeft_toLeftOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button0"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/decimal" />

</android.support.constraint.ConstraintLayout>
